<div class="converter-box">
  <div class="card">
    <div class="card-header text-center">
      <%= t('home.index.form_title') %>
    </div>
    <div class="card-block">
      <%= form_tag(convert_path, method: "post", id: "converter-form") do %>
        <div class="local_currency">
          <div class="form-group">
            <p class="title"><%= t('home.index.your_currency') %></p>
            <%= select_tag "currency", options_for_select(currency_select, "ethereum"), class: "form-control", id: "currency" %>
          </div>
          <div class="form-group">
            <input type="number" name="quantity" id="quantity" class="form-control" placeholder="<%= t('home.index.quantity') %>" step="any" required>
          </div>
        </div>
        <div class="destination_currency">
          <div class="form-group">
            <div class="row">
              <p class="title col-md-9"><%= t('home.index.another_currency') %></p>
              <a id="switch" href="#" class="col-md-3" style="text-decoration: none">
                <span class="glyphicon glyphicon-sort"></span>
              </a>
            </div>
            <%= select_tag "currency_destination", options_for_select(currency_select, "bitcoin"), class: "form-control", id: "currency_destination"%>
          </div>
          <div class="form-group">
            <input type="text" id="result" name="result" class="form-control" placeholder="<%= t('home.index.result') %>" readonly>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div style="margin-left: 15%; margin-top: 10px" id="coinwidget-bitcoin-14qNSyVPtFh4twWLD7f5nuosb2MZCxcuPh"></div>

</div>
